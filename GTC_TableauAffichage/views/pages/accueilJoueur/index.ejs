<% include header %>
<div class="ui main container">
  <div class="ui middle aligned grid">
    <% var global = 0 %>
    <% for (var row = 0; row < res.length/4; row ++) { %>
      <div class="four column stretched row">
        <% for(var local = 0; local < 4 && global < res.length; local ++, global ++) { %>
          <a href="./accueil/jeu">
            <div class="column">
              <div class="ui center aligned inverted grey segment">
                <div class="column">
                  <img class="ui centered small image" src="http://www.sans-detour.com/wp-content/uploads/2017/09/aventures_lejeu-logo-580-394x263.png">
                  </br>
                  <%= res[global].Sys_Name %>
                  </br>
                  <div class="ui small label">
                    <% if (res[global].Dis_NoPlayer < res[global].Sce_NoPlayerMax) { %>
                      <%= res[global].Sce_NoPlayerMax - res[global].Dis_NoPlayer %> places disponibles
                    <% } %>
                  </div>
                  <h4 class="ui horizontal divider header">HH:MM => HH:MM</h4>
                </div>
              </div>
            </div>
          </a>
        <% } %>
      </div>
    <% } %>
  </div>
</div>
